<?xml version="1.0" encoding="utf-8"?>
<rotate
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="90"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="3000">

    <shape
        android:innerRadiusRatio="7"
        android:shape="ring"
        android:thicknessRatio="12.0">

        <gradient
            android:centerColor="#00ff00"
            android:endColor="#00ff77"
            android:startColor="#ff00ff33"
            android:angle="0"
            android:type="sweep" />
    </shape>

</rotate>